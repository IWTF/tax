/* pages/result/result.wxss */
page{
  background: #c9c9c9;
  font-size: 18px;
}

.bg{
  width: 100%;
  height: 22%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -100;
}

.header{
  position: relative;
  width: 560rpx;
  padding: 85rpx 0 30rpx 0;
  border-radius: 20rpx;
  margin: auto;
  margin-top: 170rpx;
  background: #f1f1f1;
  border: 4rpx solid #fff;
}

.m_title{
  font-size: 30px;
  width: 200px;
  margin:auto;
  font-weight: bold;
  text-align: center;
  letter-spacing: 10rpx;
}

.card{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, .4);
}

.card_child{
  background: #f1f1f1;
  width: 520rpx;
  text-align: center;
  margin: auto;
  margin-top: 30rpx;
  padding: 50rpx 20rpx 30rpx 20rpx;
  border: 4rpx solid #fff;
  border-radius: 20rpx;
}

.avatar{
  position: absolute;
  top: -75rpx;
  left: 185rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}

.child_container{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10rpx 0;
  font-weight: 500;
}

.title{
  font-weight: 600;
  font-size: 16px;
}

.detail{
  background: #f8f8f9;
  padding: 10rpx;
}

.detail view{
  margin: 10rpx;
}

.content{
  color: #8a8a8a;
}

.message{
  font-size: 16px;
  color: #495060;
}

.shareTab{
  border-radius: 20rpx;
  background: #e7e7e7;
  width: 400rpx;
  margin: auto;
  margin-top: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.shareTab image{
  width: 52rpx;
  height: 52rpx;
  margin-top: 10rpx;
}